<Page x:Class="IRIS.Views.AnalyzePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IRIS.Views"
      xmlns:controls="clr-namespace:IRIS.Controls"
      xmlns:converters="clr-namespace:IRIS.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Analyze"
      Tag="Analyse forensique">

    <Page.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
            <converters:EnumToStringConverter x:Key="EnumToString" />
            <converters:AnalysisStatusToBrushConverter x:Key="StatusToBrush" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- En-tête de la page -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Analyse forensique" 
                       Style="{StaticResource PageTitleStyle}" />
            <TextBlock Text="Analysez vos preuves numériques avec des techniques avancées et l'intelligence artificielle" 
                       Style="{StaticResource PageDescriptionStyle}" 
                       Margin="0,5,0,0" />
        </StackPanel>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Panneau de configuration d'analyse -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource PanelBackgroundBrush}" 
                    CornerRadius="8" 
                    Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Configuration d'analyse" 
                                   Style="{StaticResource SectionTitleStyle}" 
                                   Margin="0,0,0,15" />

                        <!-- Type d'analyse -->
                        <TextBlock Text="Type d'analyse" 
                                   Style="{StaticResource LabelTextStyle}" />
                        <ComboBox x:Name="AnalysisTypeComboBox" 
                                  Margin="0,5,0,15"
                                  ItemsSource="{Binding AnalysisTypes}"
                                  SelectedItem="{Binding SelectedAnalysisType}"
                                  SelectionChanged="AnalysisTypeComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToString}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Éléments de preuve -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Éléments de preuve" 
                                       Style="{StaticResource LabelTextStyle}" />
                            <Button Grid.Column="1" 
                                    Content="Ajouter" 
                                    Style="{StaticResource SmallButtonStyle}"
                                    Click="AddEvidenceButton_Click" />
                        </Grid>

                        <Border Background="{DynamicResource ListBackgroundBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Margin="0,5,0,15"
                                MinHeight="100">
                            <ListView ItemsSource="{Binding EvidenceItems}" 
                                      BorderThickness="0" 
                                      Background="Transparent">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="SemiBold" />
                                                <TextBlock Text="{Binding Path}" 
                                                           TextTrimming="CharacterEllipsis" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}" 
                                                           FontSize="11" />
                                                <TextBlock Text="{Binding Type}" 
                                                           Foreground="{DynamicResource AccentBrush}" 
                                                           FontSize="11" />
                                            </StackPanel>
                                            <Button Grid.Column="1" 
                                                    Style="{StaticResource IconButtonStyle}" 
                                                    Tag="{Binding}"
                                                    Click="RemoveEvidenceButton_Click">
                                                <Image Source="/IRIS.Resources;component/Images/delete.png" 
                                                       Width="16" 
                                                       Height="16" />
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>

                        <!-- Assistance IA -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Assistance IA" 
                                       Style="{StaticResource LabelTextStyle}" />
                            <ToggleButton Grid.Column="1" 
                                          IsChecked="{Binding UseAI}"
                                          Checked="AIAssistToggle_Checked"
                                          Unchecked="AIAssistToggle_Unchecked" />
                        </Grid>

                        <!-- Options avancées -->
                        <Expander Header="Options avancées" 
                                  Margin="0,0,0,15"
                                  Expanded="AdvancedOptionsExpander_Expanded"
                                  Collapsed="AdvancedOptionsExpander_Collapsed">
                            <StackPanel Margin="0,10,0,0">
                                <!-- Profondeur d'analyse -->
                                <TextBlock Text="Profondeur d'analyse" 
                                           Style="{StaticResource LabelTextStyle}" />
                                <Slider Minimum="1" 
                                        Maximum="5" 
                                        Value="{Binding AnalysisDepth}" 
                                        TickFrequency="1" 
                                        IsSnapToTickEnabled="True" 
                                        TickPlacement="BottomRight" 
                                        Margin="0,5,0,5" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Rapide" FontSize="10" HorizontalAlignment="Left" />
                                    <TextBlock Grid.Column="4" Text="Approfondie" FontSize="10" HorizontalAlignment="Right" />
                                </Grid>

                                <!-- Modèles IA -->
                                <TextBlock Text="Modèles IA" 
                                           Style="{StaticResource LabelTextStyle}" 
                                           Margin="0,10,0,5" />
                                <CheckBox Content="Détection de malware" 
                                          IsChecked="{Binding UseMalwareDetection}" 
                                          Margin="0,5,0,5" />
                                <CheckBox Content="Analyse comportementale" 
                                          IsChecked="{Binding UseBehavioralAnalysis}" 
                                          Margin="0,0,0,5" />
                                <CheckBox Content="Reconstruction temporelle" 
                                          IsChecked="{Binding UseTimelineReconstruction}" 
                                          Margin="0,0,0,5" />

                                <!-- Formats d'export -->
                                <TextBlock Text="Format d'export" 
                                           Style="{StaticResource LabelTextStyle}" 
                                           Margin="0,10,0,5" />
                                <ComboBox ItemsSource="{Binding ExportFormats}" 
                                          SelectedItem="{Binding SelectedExportFormat}" 
                                          Margin="0,0,0,5" />

                                <!-- Utilisation des ressources -->
                                <TextBlock Text="Utilisation des ressources" 
                                           Style="{StaticResource LabelTextStyle}" 
                                           Margin="0,10,0,5" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="CPU:" Margin="0,0,10,0" />
                                    <Slider Grid.Column="1" 
                                            Minimum="10" 
                                            Maximum="100" 
                                            Value="{Binding CpuUsageLimit}" 
                                            TickFrequency="10" 
                                            IsSnapToTickEnabled="True" />
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding CpuUsageLimit, StringFormat={}{0}%}" 
                                               Margin="10,0,0,0" />
                                </Grid>
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="RAM:" Margin="0,0,10,0" />
                                    <Slider Grid.Column="1" 
                                            Minimum="1" 
                                            Maximum="32" 
                                            Value="{Binding RamUsageLimit}" 
                                            TickFrequency="1" 
                                            IsSnapToTickEnabled="True" />
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding RamUsageLimit, StringFormat={}{0} GB}" 
                                               Margin="10,0,0,0" />
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Boutons d'action -->
                        <Button Content="Démarrer l'analyse" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="0,10,0,0"
                                Command="{Binding StartAnalysisCommand}"
                                Click="StartAnalysisButton_Click" />
                        <Button Content="Annuler" 
                                Style="{StaticResource SecondaryButtonStyle}" 
                                Margin="0,10,0,0"
                                Command="{Binding CancelAnalysisCommand}"
                                Click="CancelAnalysisButton_Click"
                                Visibility="{Binding IsAnalysisRunning, Converter={StaticResource BoolToVis}}" />
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Résultats d'analyse -->
            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- En-tête des résultats -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Résultats d'analyse" 
                               Style="{StaticResource SectionTitleStyle}" />
                    <ComboBox Grid.Column="1" 
                              Width="150"
                              ItemsSource="{Binding ResultFilters}"
                              SelectedItem="{Binding SelectedResultFilter}" />
                </Grid>

                <!-- Liste des résultats -->
                <Border Grid.Row="1" 
                        Background="{DynamicResource PanelBackgroundBrush}" 
                        CornerRadius="8" 
                        Margin="0,10,0,0">
                    <Grid>
                        <!-- Message quand aucun résultat -->
                        <TextBlock Text="Aucun résultat d'analyse disponible. Configurez et démarrez une analyse." 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   TextWrapping="Wrap" 
                                   TextAlignment="Center" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Visibility="{Binding HasResults, Converter={StaticResource BoolToVis}, ConverterParameter=invert}" />

                        <!-- Analyse en cours -->
                        <Grid Visibility="{Binding IsAnalysisRunning, Converter={StaticResource BoolToVis}}">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <controls:CircularProgressBar Width="50" 
                                                             Height="50" 
                                                             IsActive="True" />
                                <TextBlock Text="{Binding AnalysisStatusMessage}" 
                                           Margin="0,20,0,0" 
                                           TextAlignment="Center" />
                                <TextBlock Text="{Binding AnalysisProgress, StringFormat={}{0:P0}}" 
                                           Margin="0,5,0,0" 
                                           TextAlignment="Center" 
                                           FontSize="18" 
                                           FontWeight="Bold" />
                                <ProgressBar Value="{Binding AnalysisProgress}" 
                                             Maximum="1" 
                                             Width="200" 
                                             Height="10" 
                                             Margin="0,10,0,0" />
                                <TextBlock Text="{Binding TimeRemaining, StringFormat=Temps restant: {0}}" 
                                           Margin="0,10,0,0" 
                                           TextAlignment="Center" 
                                           Foreground="{DynamicResource SecondaryTextBrush}" />
                            </StackPanel>
                        </Grid>

                        <!-- Liste des résultats -->
                        <ListView ItemsSource="{Binding AnalysisResults}" 
                                  BorderThickness="0" 
                                  Background="Transparent"
                                  Visibility="{Binding HasResults, Converter={StaticResource BoolToVis}}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource CardBackgroundBrush}" 
                                            BorderBrush="{DynamicResource BorderBrush}" 
                                            BorderThickness="1" 
                                            CornerRadius="4" 
                                            Padding="15" 
                                            Margin="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!-- En-tête du résultat -->
                                            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="Bold" 
                                                           FontSize="16" />
                                                <Border Background="{Binding Status, Converter={StaticResource StatusToBrush}}" 
                                                        CornerRadius="4" 
                                                        Padding="5,2" 
                                                        Margin="10,0,0,0">
                                                    <TextBlock Text="{Binding Status}" 
                                                               Foreground="White" 
                                                               FontSize="12" />
                                                </Border>
                                            </StackPanel>

                                            <!-- Date et type -->
                                            <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Timestamp, StringFormat=dd/MM/yyyy HH:mm}" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}" />
                                                <TextBlock Text="|" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}" 
                                                           Margin="10,0" />
                                                <TextBlock Text="{Binding Type}" 
                                                           Foreground="{DynamicResource AccentBrush}" />
                                            </StackPanel>

                                            <!-- Description -->
                                            <TextBlock Grid.Column="0" Grid.Row="2" 
                                                       Text="{Binding Description}" 
                                                       TextWrapping="Wrap" 
                                                       Margin="0,10,0,0" />

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" 
                                                        Orientation="Horizontal" 
                                                        VerticalAlignment="Center">
                                                <Button Style="{StaticResource IconButtonStyle}" 
                                                        ToolTip="Voir les résultats"
                                                        Tag="{Binding}"
                                                        Click="ViewResultsButton_Click">
                                                    <Image Source="/IRIS.Resources;component/Images/view.png" 
                                                           Width="20" 
                                                           Height="20" />
                                                </Button>
                                                <Button Style="{StaticResource IconButtonStyle}" 
                                                        ToolTip="Exporter les résultats"
                                                        Margin="10,0,0,0"
                                                        Tag="{Binding}"
                                                        Click="ExportResultsButton_Click">
                                                    <Image Source="/IRIS.Resources;component/Images/export.png" 
                                                           Width="20" 
                                                           Height="20" />
                                                </Button>
                                                <Button Style="{StaticResource IconButtonStyle}" 
                                                        ToolTip="Supprimer"
                                                        Margin="10,0,0,0"
                                                        Tag="{Binding}"
                                                        Click="DeleteResultButton_Click">
                                                    <Image Source="/IRIS.Resources;component/Images/delete.png" 
                                                           Width="20" 
                                                           Height="20" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
