<Page x:Class="IRIS.Views.RespondPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IRIS.Views"
      xmlns:controls="clr-namespace:IRIS.Controls"
      xmlns:converters="clr-namespace:IRIS.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Réponse"
      Tag="Réponse aux incidents">

    <Page.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
            <converters:StatusToBrushConverter x:Key="StatusToBrush" />
            <converters:AutomationLevelToBrushConverter x:Key="AutomationToBrush" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- En-tête de la page -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Réponse aux incidents" 
                       Style="{StaticResource PageTitleStyle}" />
            <TextBlock Text="Exécutez des playbooks de réponse automatisés et suivez les actions en cours" 
                       Style="{StaticResource PageDescriptionStyle}" 
                       Margin="0,5,0,0" />
        </StackPanel>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Panneau de filtres et options -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource PanelBackgroundBrush}" 
                    CornerRadius="8" 
                    Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Playbooks de réponse" 
                                   Style="{StaticResource SectionTitleStyle}" 
                                   Margin="0,0,0,15" />

                        <!-- Catégories -->
                        <TextBlock Text="Catégorie" 
                                   Style="{StaticResource LabelTextStyle}" />
                        <ComboBox ItemsSource="{Binding Categories}" 
                                  SelectedItem="{Binding SelectedCategory}" 
                                  Margin="0,5,0,15" />

                        <!-- Assistance IA -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Assistance IA" 
                                       Style="{StaticResource LabelTextStyle}" />
                            <ToggleButton Grid.Column="1" 
                                          IsChecked="{Binding UseAI}"
                                          Checked="AIAssistToggle_Checked"
                                          Unchecked="AIAssistToggle_Unchecked" />
                        </Grid>

                        <!-- Vérification blockchain -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Vérification blockchain" 
                                       Style="{StaticResource LabelTextStyle}" />
                            <ToggleButton Grid.Column="1" 
                                          IsChecked="{Binding UseBlockchainVerification}"
                                          Checked="BlockchainVerifyToggle_Checked"
                                          Unchecked="BlockchainVerifyToggle_Unchecked" />
                        </Grid>

                        <!-- Description IA et blockchain -->
                        <Border Background="{DynamicResource InfoBackgroundBrush}" 
                                BorderBrush="{DynamicResource InfoBorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Padding="10" 
                                Margin="0,0,0,15">
                            <TextBlock TextWrapping="Wrap" 
                                       Foreground="{DynamicResource InfoTextBrush}" 
                                       FontSize="12">
                                <Run Text="L'IA optimisera les actions de réponse en fonction du contexte de l'incident." />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="La vérification blockchain garantit l'intégrité et la traçabilité des actions pour les besoins légaux." />
                            </TextBlock>
                        </Border>

                        <!-- Boutons d'action -->
                        <Button Content="Créer un playbook" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="0,10,0,0"
                                Command="{Binding CreatePlaybookCommand}"
                                Click="CreatePlaybookButton_Click" />
                        <Button Content="Importer un playbook" 
                                Style="{StaticResource SecondaryButtonStyle}" 
                                Margin="0,10,0,0"
                                Command="{Binding ImportPlaybookCommand}"
                                Click="ImportPlaybookButton_Click" />

                        <!-- Statut d'exécution -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Padding="15" 
                                Margin="0,20,0,0"
                                Visibility="{Binding IsPlaybookRunning, Converter={StaticResource BoolToVis}}">
                            <StackPanel>
                                <TextBlock Text="Exécution en cours" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,10" />
                                <TextBlock Text="{Binding SelectedPlaybook.Name}" 
                                           FontWeight="SemiBold" 
                                           Foreground="{DynamicResource AccentBrush}" />
                                <TextBlock Text="{Binding PlaybookStatusMessage}" 
                                           Margin="0,10,0,0" />
                                <ProgressBar Value="{Binding PlaybookProgress}" 
                                             Maximum="1" 
                                             Height="10" 
                                             Margin="0,10,0,0" />
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Actions terminées:" />
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding ActionsCompleted, StringFormat={}{0}/{1}}" 
                                               FontWeight="Bold" />
                                </Grid>
                                <Button Content="Annuler" 
                                        Style="{StaticResource SecondaryButtonStyle}" 
                                        Margin="0,10,0,0"
                                        Command="{Binding CancelPlaybookCommand}"
                                        CommandParameter="{Binding SelectedPlaybook}"
                                        Click="CancelPlaybookButton_Click" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Liste des playbooks et actions récentes -->
            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="250" />
                </Grid.RowDefinitions>

                <!-- Liste des playbooks -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource PanelBackgroundBrush}" 
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- En-tête de la liste -->
                        <TextBlock Grid.Row="0" 
                                   Text="Playbooks disponibles" 
                                   Style="{StaticResource SectionTitleStyle}" 
                                   Margin="15,15,15,10" />

                        <!-- Liste des playbooks -->
                        <ListView Grid.Row="1" 
                                  ItemsSource="{Binding FilteredPlaybooks}" 
                                  BorderThickness="0" 
                                  Background="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource CardBackgroundBrush}" 
                                            BorderBrush="{DynamicResource BorderBrush}" 
                                            BorderThickness="1" 
                                            CornerRadius="4" 
                                            Padding="15" 
                                            Margin="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!-- En-tête du playbook -->
                                            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="Bold" 
                                                           FontSize="16" />
                                                <Border Background="{Binding AutomationLevel, Converter={StaticResource AutomationToBrush}}" 
                                                        CornerRadius="4" 
                                                        Padding="5,2" 
                                                        Margin="10,0,0,0">
                                                    <TextBlock Text="{Binding AutomationLevel}" 
                                                               Foreground="White" 
                                                               FontSize="12" />
                                                </Border>
                                            </StackPanel>

                                            <!-- Description -->
                                            <TextBlock Grid.Column="0" Grid.Row="1" 
                                                       Text="{Binding Description}" 
                                                       TextWrapping="Wrap" 
                                                       Margin="0,5,0,0" />

                                            <!-- Métadonnées -->
                                            <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="{Binding Category}" 
                                                           Foreground="{DynamicResource AccentBrush}" 
                                                           FontWeight="SemiBold" />
                                                <TextBlock Text="|" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}" 
                                                           Margin="10,0" />
                                                <TextBlock Text="{Binding ActionCount, StringFormat={}{0} actions}" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}" />
                                                <TextBlock Text="|" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}" 
                                                           Margin="10,0" />
                                                <TextBlock Text="{Binding EstimatedDuration, StringFormat={}{0:mm} min}" 
                                                           Foreground="{DynamicResource SecondaryTextBrush}" />
                                            </StackPanel>

                                            <!-- Techniques MITRE -->
                                            <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,0">
                                                <ItemsControl ItemsSource="{Binding MITRETactics}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource AccentLightBrush}" 
                                                                    CornerRadius="4" 
                                                                    Padding="5,2" 
                                                                    Margin="0,0,5,0">
                                                                <TextBlock Text="{Binding}" 
                                                                           Foreground="{DynamicResource AccentDarkBrush}" 
                                                                           FontSize="11" />
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" 
                                                        Orientation="Vertical" 
                                                        VerticalAlignment="Center">
                                                <Button Content="Exécuter" 
                                                        Style="{StaticResource PrimaryButtonStyle}" 
                                                        Margin="0,0,0,10"
                                                        Command="{Binding DataContext.ExecutePlaybookCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                        CommandParameter="{Binding}"
                                                        Tag="{Binding}"
                                                        Click="ExecutePlaybookButton_Click" />
                                                <Button Content="Détails" 
                                                        Style="{StaticResource SecondaryButtonStyle}" 
                                                        Margin="0,0,0,10"
                                                        Command="{Binding DataContext.ViewPlaybookDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                        CommandParameter="{Binding}"
                                                        Tag="{Binding}"
                                                        Click="ViewPlaybookDetailsButton_Click" />
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Style="{StaticResource IconButtonStyle}" 
                                                            ToolTip="Exporter"
                                                            Margin="0,0,5,0"
                                                            Command="{Binding DataContext.ExportPlaybookCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                            CommandParameter="{Binding}"
                                                            Tag="{Binding}"
                                                            Click="ExportPlaybookButton_Click">
                                                        <Image Source="/IRIS.Resources;component/Images/export.png" 
                                                               Width="16" 
                                                               Height="16" />
                                                    </Button>
                                                    <Button Style="{StaticResource IconButtonStyle}" 
                                                            ToolTip="Modifier"
                                                            Margin="0,0,5,0"
                                                            Command="{Binding DataContext.EditPlaybookCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                            CommandParameter="{Binding}"
                                                            Tag="{Binding}"
                                                            Click="EditPlaybookButton_Click">
                                                        <Image Source="/IRIS.Resources;component/Images/edit.png" 
                                                               Width="16" 
                                                               Height="16" />
                                                    </Button>
                                                    <Button Style="{StaticResource IconButtonStyle}" 
                                                            ToolTip="Supprimer"
                                                            Command="{Binding DataContext.DeletePlaybookCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                            CommandParameter="{Binding}"
                                                            Tag="{Binding}"
                                                            Click="DeletePlaybookButton_Click">
                                                        <Image Source="/IRIS.Resources;component/Images/delete.png" 
                                                               Width="16" 
                                                               Height="16" />
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>

                <!-- Séparateur -->
                <TextBlock Grid.Row="1" 
                           Text="Actions récentes" 
                           Style="{StaticResource SectionTitleStyle}" 
                           Margin="0,15,0,10" />

                <!-- Actions récentes -->
                <Border Grid.Row="2" 
                        Background="{DynamicResource PanelBackgroundBrush}" 
                        CornerRadius="8">
                    <ListView ItemsSource="{Binding RecentActions}" 
                              BorderThickness="0" 
                              Background="Transparent">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource CardBackgroundBrush}" 
                                        BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="4" 
                                        Padding="15" 
                                        Margin="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Indicateur de statut -->
                                        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" 
                                                Background="{Binding Status, Converter={StaticResource StatusToBrush}}" 
                                                Width="5" 
                                                CornerRadius="2" 
                                                Margin="0,0,15,0" />

                                        <!-- En-tête de l'action -->
                                        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding ActionName}" 
                                                       FontWeight="Bold" />
                                            <TextBlock Text="|" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                                       Margin="10,0" />
                                            <TextBlock Text="{Binding PlaybookName}" 
                                                       Foreground="{DynamicResource AccentBrush}" />
                                        </StackPanel>

                                        <!-- Détails -->
                                        <TextBlock Grid.Column="1" Grid.Row="1" 
                                                   Text="{Binding Details}" 
                                                   TextWrapping="Wrap" 
                                                   Margin="0,5,0,0" />

                                        <!-- Métadonnées -->
                                        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding StartTime, StringFormat={}Démarré le {0:dd/MM/yyyy} à {0:HH:mm}}" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                                       FontSize="12" />
                                            <TextBlock Text="|" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                                       Margin="10,0" 
                                                       FontSize="12" />
                                            <TextBlock Text="{Binding ExecutedBy, StringFormat={}Par: {0}}" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                                       FontSize="12" />
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" 
                                                    Orientation="Vertical" 
                                                    VerticalAlignment="Center">
                                            <Button Style="{StaticResource IconButtonStyle}" 
                                                    ToolTip="Voir les détails"
                                                    Margin="0,0,0,10"
                                                    Command="{Binding DataContext.ViewActionDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                    CommandParameter="{Binding}"
                                                    Tag="{Binding}"
                                                    Click="ViewActionDetailsButton_Click">
                                                <Image Source="/IRIS.Resources;component/Images/view.png" 
                                                       Width="20" 
                                                       Height="20" />
                                            </Button>
                                            <Button Style="{StaticResource IconButtonStyle}" 
                                                    ToolTip="Générer un rapport"
                                                    Command="{Binding DataContext.GenerateReportCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                    CommandParameter="{Binding}"
                                                    Tag="{Binding}"
                                                    Click="GenerateReportButton_Click">
                                                <Image Source="/IRIS.Resources;component/Images/report.png" 
                                                       Width="20" 
                                                       Height="20" />
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
